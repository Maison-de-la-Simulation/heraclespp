{
  "environment": {
    "modules": [
      "cmake/3.27.9/gcc-11.2.0",
      "cuda/12.2.1/gcc-11.2.0",
      "gcc/11.2.0/gcc-4.8.5",
      "hdf5/1.10.7/gcc-11.2.0-openmpi",
      "openmpi/4.1.1/gcc-11.2.0"
    ],
    "variables": {
      "CMAKE_BUILD_TYPE": "Release",
      "CC": "gcc",
      "CXX": "g++"
    }
  },
  "packages": {
    "pdi": {
      "build_system": {
        "options": [
          "BUILD_BENCHMARKING=OFF",
          "BUILD_DECL_HDF5_PLUGIN=ON",
          "BUILD_FORTRAN=OFF",
          "BUILD_HDF5_PARALLEL=ON",
          "BUILD_DECL_NETCDF_PLUGIN=OFF",
          "BUILD_MPI_PLUGIN=ON",
          "BUILD_NETCDF_PARALLEL=OFF",
          "BUILD_SERIALIZE_PLUGIN=OFF",
          "BUILD_SET_VALUE_PLUGIN=ON",
          "BUILD_SHARED_LIBS=ON",
          "BUILD_TESTING=OFF",
          "BUILD_TRACE_PLUGIN=ON",
          "BUILD_USER_CODE_PLUGIN=OFF",
          "CMAKE_CXX_EXTENSIONS=OFF",
          "CMAKE_CXX_STANDARD=17",
          "USE_HDF5=SYSTEM",
          "USE_paraconf=EMBEDDED",
          "USE_spdlog=EMBEDDED",
          "USE_yaml=EMBEDDED"
        ],
        "package": "PDI",
        "type": "cmake"
      },
      "commands": [
        ". ${PDI_ROOT}/share/pdi/env.sh"
      ],
      "provider": {
        "type": "git",
        "url": "https://github.com/pdidev/pdi.git",
        "version": "1.8.0"
      }
    },
    "gtest": {
      "build_system": {
        "options": [
          "CMAKE_CXX_EXTENSIONS=OFF",
          "CMAKE_CXX_STANDARD=17"
        ],
        "package": "GTest",
        "type": "cmake"
      },
      "provider": {
        "type": "git",
        "url": "https://github.com/google/googletest.git",
        "version": "v1.15.2"
      }
    },
    "benchmark": {
      "build_system": {
        "options": [
          "BENCHMARK_ENABLE_GTEST_TESTS=OFF",
          "BENCHMARK_ENABLE_TESTING=OFF",
          "BENCHMARK_INSTALL_DOCS=OFF",
          "BENCHMARK_USE_BUNDLED_GTEST=OFF",
          "CMAKE_CXX_EXTENSIONS=OFF",
          "CMAKE_CXX_STANDARD=17"
        ],
        "package": "benchmark",
        "type": "cmake"
      },
      "provider": {
        "type": "git",
        "url": "https://github.com/google/benchmark.git",
        "version": "v1.9.1"
      }
    },
    "kokkos": {
      "build_system": {
        "options": [
          "CMAKE_CXX_EXTENSIONS=OFF",
          "CMAKE_CXX_STANDARD=17",
          "Kokkos_ARCH_SKX=ON",
          "Kokkos_ARCH_AMPERE80=ON",
          "Kokkos_ENABLE_CUDA=ON",
          "Kokkos_ENABLE_DEPRECATED_CODE_4=OFF",
          "Kokkos_ENABLE_OPENMP=ON"
        ],
        "package": "Kokkos",
        "type": "cmake"
      },
      "provider": {
        "type": "git",
        "url": "https://github.com/kokkos/kokkos.git",
        "version": "4.5.00"
      }
    },
    "kokkos-tools": {
      "build_system": {
        "options": [
          "CMAKE_CXX_EXTENSIONS=OFF",
          "CMAKE_CXX_STANDARD=17"
        ],
        "package": "KokkosTools",
        "type": "cmake"
      },
      "provider": {
        "type": "git",
        "url": "https://github.com/kokkos/kokkos-tools.git",
        "version": "develop"
      }
    }
  }
}
